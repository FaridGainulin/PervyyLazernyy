.header
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 40px

  &__logo
    width 84px
    height: 34px
    +above($breakpoints.sm)
      width 96px
      height: 38px
    +above($breakpoints.md)
      width 108px
      height: 43px
    +above($breakpoints.xxl)
      width 118px
      height: 47px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 4px

  &__brand-mobile
    position relative
    z-index 1
    text-align: center
    padding 5px 0
    margin-top: 5px
    +above($breakpoints.sm)
      display: none
    &:after
      content: ""
      position: absolute
      z-index -1
      width 100vw
      height: 100%
      bottom: 0
      left: 50%
      transform: translateX(-50%)
      background-color #DAD1C4
