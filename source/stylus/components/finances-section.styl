.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: radial-gradient(65.98% 248.19% at -155.7% 50%, #f3ece1 0%, #dad1c4 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0
    +above($breakpoints.md)
      padding 90px 0
    +above($breakpoints.xxl)
      padding 120px 0 124px

  &__icon
    width 100px
    height: 21px
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      width 125px
      height: 27px
    +above($breakpoints.md)
      width 160px
      height: 34px
    +above($breakpoints.xxl)
      width 188px
      height: 40px

  &__title
    padding 10px 0
    +above($breakpoints.sm)
      padding 12px 0
    +above($breakpoints.md)
      padding 16px 0
    +above($breakpoints.xxl)
      padding 20px 0

  &__box
    position relative
    z-index 1
    padding 15px 0 1px
    margin 15px 0
    +above($breakpoints.sm)
      padding 25px 0
      margin 25px 0
    +above($breakpoints.md)
      padding 35px 0
      margin 35px 0
    +above($breakpoints.xxl)
      padding 48px 0
      margin 48px 0
    &:after,
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color $color-brown
      width 54px
      height: 1px
      left: 50%
      transform: translateX(-50%)
      +above($breakpoints.sm)
        transform: unset
        left: 0
        width 74px
      +above($breakpoints.md)
        width 84px
      +above($breakpoints.xxl)
        width 94px
    &:before
      top: 0
    &:after
      bottom: 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      width 420px
      gap: 30px 0
    +above($breakpoints.md)
      width 600px
      gap: 40px 0
    +above($breakpoints.xxl)
      gap: 54px 0

  &__card
    width 280px !important
    display: flex
    align-items: flex-start
    justify-content center
    gap: 15px
    +above($breakpoints.sm)
      justify-content flex-start
      width 200px !important
      gap: 20px
    +above($breakpoints.md)
      width: 250px !important;
      gap: 25px
    +above($breakpoints.xxl)
      width 300px !important
      gap: 30px

  &__card-dot
    width 6px
    height: 6px
    border-radius: 50%
    background-color $color-red
    margin-top 5px
    +above($breakpoints.sm)
      margin-top 6px
    +above($breakpoints.md)
      margin-top 11px
    +above($breakpoints.xxl)
      margin-top 13px

  &__card-text
    display: flex
    flex-direction: column
    gap: 5px
    +above($breakpoints.sm)
      gap: 7px
    +above($breakpoints.md)
      gap: 9px
    +above($breakpoints.xxl)
      gap: 10px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      align-items: flex-start

  &__bottom-text
    padding 7px 0 10px
    +above($breakpoints.sm)
      padding 10px 0 15px
    +above($breakpoints.md)
      padding 12px 0 20px
    +above($breakpoints.xxl)
      padding 12px 0 24px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 8px
    +above($breakpoints.md)
      gap: 10px
    +above($breakpoints.xxl)
      gap: 12px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 260px !important

  &__agree-wrapper
    margin-top 12px
    +above($breakpoints.sm)
      margin-top 20px

  &__img
    width 200px
    height: auto
    margin 10px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 380px;
      bottom: 70px;
      right: -70px;
    +above($breakpoints.md)
      width: 505px;
      bottom: 77px;
      right: -60px;
    +above($breakpoints.xxl)
      width 628px
      bottom: 103px
      right: -44px
