.details-section
  // background-image: url('../images/details-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: radial-gradient(65.98% 248.19% at -155.7% 50%, #f3ece1 0%, #dad1c4 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0
    +above($breakpoints.md)
      padding 90px 0
    +above($breakpoints.xxl)
      padding 120px 0 124px

  &__icon-bg
    position: absolute
    z-index -1
    width: 353px;
    height: 90px
    top: 7px;
    left: -22px;
    +above($breakpoints.sm)
      width: 945px;
      height: 242px
      top: 14px;
      left: -83px;
    +above($breakpoints.md)
      width: 1230px;
      height: 315px
      top: 28px;
      left: -110px;
    +above($breakpoints.xxl)
      width 1538px
      height: 394px
      top: 41px
      left: -130px

  &__icon
    margin 0 auto
    width 230px
    height: 19px
    +above($breakpoints.sm)
      margin 0
      width 280px
      height: 23px
    +above($breakpoints.md)
      width 355px
      height: 29px
    +above($breakpoints.xxl)
      width 439px
      height: 36px

  &__title
    padding 6px 0 8px
    +above($breakpoints.sm)
      padding 18px 0 15px
    +above($breakpoints.md)
      padding 20px 0 18px
    +above($breakpoints.xxl)
      padding 24px 0 20px

  &__sub-title
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 40px
    +above($breakpoints.xxl)
      padding-bottom 56px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__card
    background: linear-gradient(225deg, #a28268 0%, #82654f 100%);
    color: $color-white
    display: flex
    flex-direction: column
    width 280px !important
    padding 10px 10px 20px
    +above($breakpoints.sm)
      gap: 25px
      width 174px !important
      padding 15px 5px 15px 15px
    +above($breakpoints.md)
      gap: 30px
      width 230px !important
      padding 18px 5px 18px 18px
    +above($breakpoints.xxl)
      gap: 39px
      width 280px !important
      padding 20px 5px 20px 20px

  &__card-icon
    width 18px
    height: 18px
    +above($breakpoints.sm)
      width 17px
      height: 17px
    +above($breakpoints.md)
      width 22px
      height: 22px
    +above($breakpoints.xxl)
      width 24px
      height: 24px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: flex-start
    gap: 15px
    margin-top 25px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: center
      justify-content space-between
      margin-top 30px
    +above($breakpoints.md)
      margin-top 45px
    +above($breakpoints.xxl)
      margin-top 56px

  &__bottom-img
    width 100px
    height: auto
    border-radius: 50%
    +above($breakpoints.sm)
      width 135px
    +above($breakpoints.md)
      width 160px
    +above($breakpoints.xxl)
      width 184px

  &__bottom-block
    position relative
    z-index 1
    display: flex
    flex-direction: column
    align-items: center
    padding-top 15px
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      align-items: flex-start
      padding-top 30px
    +above($breakpoints.md)
      padding-top 40px
    +above($breakpoints.xxl)
      padding-top 48px
    &:after
      content: ""
      position: absolute
      z-index -1
      height: 1px
      background-color $color-brown
      top: 0
      left: 50%
      transform: translateX(-50%)
      width 54px
      +above($breakpoints.sm)
        left: 0
        transform: unset
        width 74px
      +above($breakpoints.md)
        width 84px
      +above($breakpoints.xxl)
        width 94px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    margin 15px 0 10px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 8px
      margin 20px 0 16px
    +above($breakpoints.md)
      gap: 10px
      margin 22px 0 18px
    +above($breakpoints.xxl)
      gap: 12px
      margin 24px 0 20px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 245px !important
      +above($breakpoints.xxl)
        width 309px !important

  &__img
    position: absolute
    z-index 0
    width: 167px;
    height: auto;
    bottom: 235px;
    right: 0
    +above($breakpoints.sm)
      width: 285px;
      bottom: 343px;
    +above($breakpoints.md)
      width: 348px;
      bottom: 466px;
    +above($breakpoints.xxl)
      width 437px
      bottom: 566px
