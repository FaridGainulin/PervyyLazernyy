.thanks-section
  display: flex
  flex-direction: column
  justify-content center
  align-items: center
  height: 100%

  &__container
    text-align: center

  &__inner-text
    padding: 20px 0 40px 0

  &__container a
    max-width 300px
    margin: 0 auto

.thanks-page
  background-color #F0EBE4

.wrapper-header-thanks
  padding 15px 0
  +above($breakpoints.sm)
    padding 25px 0
  +above($breakpoints.md)
    padding 30px 0
  +above($breakpoints.xxl)
    padding 35px 0
