.agree
  user-select: none;

  &__container
    color: #787878
    display: flex
    justify-content center
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      justify-content flex-start
      align-items: flex-start
      gap: 6px
    +above($breakpoints.md)
      gap: 7px
    +above($breakpoints.xxl)
      gap: 8px
  
  &__input
    width 0
    height 0
    opacity 0
    position absolute

  &__icon
    display: block;
    width 9px;
    flex-shrink: 0;
    height: 9px;
    border: 1px solid $color-red
    border-radius: 2px
    position: relative
    transition: border 0.3s

    &::after
      content: "";
      width calc(100% + 2px)
      height calc(100% + 2px)
      position: absolute
      top: -1px
      left: -1px
      background: url('../images/checkbox.svg')
      background-size: cover
      opacity 0
      transition: opacity 0.3s

    +above($breakpoints.sm)
      width 10px
      height: 10px
    +above($breakpoints.md)
      width 11px
      height: 11px
    +above($breakpoints.xxl)
      width 12px
      height: 12px

  &__input.error + &__icon
    border-color $color-error
  
  &__input.error + &__icon + &__text
    color: $color-error

  &__input:checked + &__icon
    border-color: transparent
    &::after
      opacity 1

  &__privacy
    text-decoration: underline
    cursor pointer
