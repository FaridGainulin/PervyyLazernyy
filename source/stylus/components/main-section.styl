.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position-x 48%
  background-position-y center
  background-color #F0EBE4
  +above($breakpoints.sm)
    background-position center

  &__container
    position relative
    z-index 1
    padding 15px 0 25px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 25px 0 70px
    +above($breakpoints.md)
      padding 30px 0 120px
    +above($breakpoints.xxl)
      padding 34px 0 152px

  &__title
    padding 20px 0 5px
    +above($breakpoints.sm)
      padding 50px 0 6px
    +above($breakpoints.md)
      padding 90px 0 6px
    +above($breakpoints.xxl)
      padding 114px 0 6px

  &__line
    background-color $color-brown
    width 53px
    height: 1px
    margin 10px auto
    +above($breakpoints.sm)
      margin 20px 0
      width 63px
    +above($breakpoints.md)
      width 73px
      margin 30px 0
    +above($breakpoints.xxl)
      margin 40px 0

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    margin-top 10px
    +above($breakpoints.sm)
      width 532px
      flex-direction: row
      flex-wrap: wrap
      gap: 8px
      margin-top 20px
    +above($breakpoints.md)
      gap: 10px
      margin-top 30px
    +above($breakpoints.xxl)
      gap: 12px
      margin-top 34px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 260px !important

  &__agree-wrapper
    margin-top 6px
    +above($breakpoints.sm)
      margin 0
      padding-left 15px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 27px

  &__img
    width 280px
    height: auto
    margin: 20px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 260px;
      right: 85px;
      bottom: 70px;
    +above($breakpoints.md)
      width: 330px;
      right: 130px;
      bottom: 125px;
    +above($breakpoints.xxl)
      width 429px
      right: 154px
      bottom: 155px

  &__icon
    position: absolute
    z-index 1
    width: 300px;
    height: 43px
    bottom: 43px;
    right: -38px;
    +above($breakpoints.sm)
      width: 215px;
      height: 31px
      bottom: 70px;
      right: -138px;
    +above($breakpoints.md)
      width: 320px;
      height: 46px
      bottom: 124px;
      right: -203px;
    +above($breakpoints.xxl)
      width 475px
      height: 68px
      bottom: 150px
      right: -340px
