@font-face
  font-family 'INTERTIGHT-LIGHT'
  src url('../fonts/INTERTIGHT-LIGHT.woff'), url('../fonts/INTERTIGHT-LIGHT.woff2')
  font-display swap
@font-face
  font-family 'INTERTIGHT-MEDIUM'
  src url('../fonts/INTERTIGHT-MEDIUM.woff'), url('../fonts/INTERTIGHT-MEDIUM.woff2')
  font-display swap
@font-face
  font-family 'INTERTIGHT-REGULAR'
  src url('../fonts/INTERTIGHT-REGULAR.woff'), url('../fonts/INTERTIGHT-REGULAR.woff2')
  font-display swap
@font-face
  font-family 'INTERTIGHT-SEMIBOLD'
  src url('../fonts/INTERTIGHT-SEMIBOLD.woff'), url('../fonts/INTERTIGHT-SEMIBOLD.woff2')
  font-display swap

@font-face
  font-family 'CormorantInfant-Light'
  src url('../fonts/CormorantInfant-Light.woff'), url('../fonts/CormorantInfant-Light.woff2')
  font-display swap
@font-face
  font-family 'CormorantInfant-Regular'
  src url('../fonts/CormorantInfant-Regular.woff'), url('../fonts/CormorantInfant-Regular.woff2')
  font-display swap
@font-face
  font-family 'CormorantInfant-SemiBold'
  src url('../fonts/CormorantInfant-SemiBold.woff'), url('../fonts/CormorantInfant-SemiBold.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'INTERTIGHT-LIGHT'
  font-weight 300
  line-height 120%
  color $color-brown

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
