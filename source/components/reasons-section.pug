section.reasons-section
  .wrapper
    .reasons-section__container
      img.reasons-section__icon-bg(src="images/reasons-section-icon-bg.svg" loading="lazy" width="1538" height="394" alt="icon")
      img.reasons-section__icon(src="images/reasons-section-icon.svg" loading="lazy" width="583" height="41" alt="icon")
